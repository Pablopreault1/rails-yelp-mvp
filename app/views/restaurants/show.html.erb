<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>

<% @restaurant.reviews.each do |review| %>
    <li><strong> <%= review.content %> </strong><%= review.rating%></li>
     <%= link_to 'Delete Review', review_path(review), data: { turbo_method: :delete, turbo_confirm: 'Are you sure ?' } %>
  <% end %>
 <p><%= link_to "Back to restaurants", restaurants_path %></p>
  <p> <%= link_to "Add a new review", new_restaurant_review_path(@restaurant) %> </p>
  <%= button_to "Destroy this restaurant", @restaurant, method: :delete ,data: { turbo_method: :delete, turbo_confirm: 'Are you sure ?' }%>
</div>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit 'Save', class: 'btn btn-primary'%>

<% end %>
